{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default capabilities for the Roots app",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:allow-set-badge-label",
    "store:default",
    "shell:allow-open",
    "deep-link:default",
    {
      "identifier": "http:default",
      "allow": [
        { "url": "https://*.mocoapp.com/**" },
        { "url": "https://api.personio.de/**" },
        { "url": "https://graph.microsoft.com/**" },
        { "url": "https://login.microsoftonline.com/**" },
        { "url": "https://*.atlassian.net/**" },
        { "url": "https://*.jira.com/**" },
        { "url": "http://**" },
        { "url": "https://**" }
      ]
    }
  ]
}
